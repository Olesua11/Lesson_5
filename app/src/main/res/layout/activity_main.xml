<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <View
        android:id="@+id/greenBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fgreen" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView

        android:layout_width="290dp"
        android:layout_height="89dp"
        android:paddingLeft="50dp"
        android:paddingTop="1dp"
        android:paddingRight="26dp"
        android:paddingBottom="8dp"
        android:text="REGISTER"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        />


    <TextView
        android:layout_width="486dp"
        android:layout_height="90dp"
        android:paddingLeft="185dp"
        android:paddingTop="15dp"
        android:paddingRight="11dp"
        android:paddingBottom="34dp"
        android:text="TRIVA"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="33dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="33dp"
            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_rounded"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="150dp"
        tools:ignore="MissingConstraints">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:background="@color/green" android:textSize="20dp"  android:textColor="@color/white"
            android:text="Username" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:background="@color/green"  android:textSize="20dp"  android:textColor="@color/white"
            android:text="Triva"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_rounded"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="219dp"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:background="@color/green" android:textSize="20dp"  android:textColor="@color/white"
            android:text="Email"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_rounded"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="285dp"
        tools:ignore="MissingConstraints">



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:background="@color/green" android:textSize="20dp"  android:textColor="@color/white"
            android:text="Password"/>



    </LinearLayout>

    <Button
        android:layout_width="308dp"
        android:layout_height="67dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="399dp"
        android:text="Next"
        android:textSize="30dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />






    <ImageView
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_margin="26dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_2"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="30dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="33dp"
        android:layout_margin="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_3"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="418dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:layout_width="185dp"
        android:layout_height="155dp"
        android:layout_margin="165dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_4"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="498dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>

